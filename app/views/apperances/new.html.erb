

<% if flash[:errors] %>
<% flash[:errors].each do | error | %>
<li style="color: red"><%=error%> </li>
<% end %>
<% end %>

<%=form_with model: @apperance, url: "/apperances" , method: :post do |f| %>
<br>
<%=f.label :guest_id%>
<%= f.collection_select :guest_id, @guests, :id, :name, prompt: true %>
<br>
<%=f.label :episode_id%>
<%=f.collection_select :episode_id, @episodes, :id, :date, prompt: true %> 
<br>
<%=f.label :rating %>
<%= f.text_field :rating %>
<br>
<%=f.submit%>
<%end%>