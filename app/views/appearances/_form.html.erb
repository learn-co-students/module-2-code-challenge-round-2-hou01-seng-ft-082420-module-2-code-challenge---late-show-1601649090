<%= form_with model: @appearances do |f| %>
    <br>
<%= f.label :guest_id%>
<%= f.collection_select :guest_id, @guests, :id, :name%>
<br>  
<%= f.label :episode_id%>
<%= f.collection_select :episode_id, @episodes, :id, :date %>
<br>
<%= f.label :rating%>
<%= f.text_field :rating %><br>

<br>
<%= f.submit%>
<%end%>